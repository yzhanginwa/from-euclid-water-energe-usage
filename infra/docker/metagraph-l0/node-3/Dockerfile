ARG TESSELLATION_VERSION

FROM --platform=linux/amd64 metagraph-base-image-${TESSELLATION_VERSION}

ARG GIT_PERSONAL_ACCESS_TOKEN
ARG P12_FILE_NAME_GENESIS
ARG P12_FILE_NAME_NODE_3
ARG P12_FILE_KEY_ALIAS_GENESIS
ARG P12_FILE_KEY_ALIAS_NODE_3
ARG P12_FILE_PASSWORD_GENESIS
ARG P12_FILE_PASSWORD_NODE_3

ENV LC_ALL C.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US.UTF-8

ENV GITHUB_TOKEN=${GIT_PERSONAL_ACCESS_TOKEN}
ENV CL_KEYSTORE_GENESIS=${P12_FILE_NAME_GENESIS}
ENV CL_KEYSTORE_NODE_3=${P12_FILE_NAME_NODE_3}
ENV CL_KEYALIAS_GENESIS=${P12_FILE_KEY_ALIAS_GENESIS}
ENV CL_KEYALIAS_NODE_3=${P12_FILE_KEY_ALIAS_NODE_3}
ENV CL_PASSWORD_GENESIS=${P12_FILE_PASSWORD_GENESIS}
ENV CL_PASSWORD_NODE_3=${P12_FILE_PASSWORD_NODE_3}

COPY p12-files/${P12_FILE_NAME_NODE_3} ${P12_FILE_NAME_NODE_3}
COPY p12-files/${P12_FILE_NAME_GENESIS} genesis/${P12_FILE_NAME_GENESIS}